                          <cats translate="label">
                              <label>Place in all categories</label>
                              <frontend_type>select</frontend_type>
                              <comment><![CDATA[Place the bundled product in all categories the simple products are placed in]]></comment>
                              <source_model>adminhtml/system_config_source_yesno</source_model>
                              <sort_order>20</sort_order>
                              <show_in_default>1</show_in_default>
                              <show_in_website>1</show_in_website>
                              <show_in_store>1</show_in_store>
                          </cats>
                          <related translate="label">
                              <label>Make related product</label>
                              <frontend_type>select</frontend_type>
                              <comment><![CDATA[Make the bundled product a related product of the simple products]]></comment>
                              <source_model>adminhtml/system_config_source_yesno</source_model>
                              <sort_order>20</sort_order>
                              <show_in_default>1</show_in_default>
                              <show_in_website>1</show_in_website>
                              <show_in_store>1</show_in_store>
